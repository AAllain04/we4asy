<!DOCTYPE html>
 <html>
     <head>
         <meta charset="UTF-8">
         <title>Moodle</title>
         <link href="{{ asset('css/style.css') }}" rel="stylesheet">
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
         <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
         <link rel="icon" href="{{ asset('assets/logo_moodle.png') }}">
     </head>
     <body>
         <nav class="navbar navbar-expand-lg navbar-light bg-light" aria-label="Main Navigation">
            <div id="nav" class="container-fluid">
                <!-- Logo à gauche -->
                <a id="utbmlogo" class="navbar-brand d-flex align-items-center m-0 p-0">
                    <img alt="UTBM Logo" src="{{ asset('assets/logo_blanc.png') }}" class="img-fluid">
                </a>

                <!-- Bouton pour ouvrir le drawer -->
                <button id="drawerToggle" class="navbar-toggler" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Contenu de la navigation -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto" id="navbar-items">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mon Compte
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="accountDropdown">
                                 <form id="accountForm">
                                     <div class="mb-2">
                                         <label class="form-label">Nom</label>
                                         <input type="text" class="form-control" id="userLastName" value="">
                                     </div>
                                     <div class="mb-2">
                                         <label class="form-label">Prénom</label>
                                         <input type="text" class="form-control" id="userFirstName" value="">
                                     </div>
                                     <div class="mb-2 position-relative">
                                        <label class="form-label" for="floatingPassword">Nouveau mot de passe</label>
                                        <input type="password" class="form-control" id="floatingPassword" name="password">
                                        <button type="button" class="btn btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2 border-0"
                                                onclick="
                                                    event.stopPropagation();
                                                    const pwdInput = document.getElementById('floatingPassword');
                                                    this.innerHTML = pwdInput.type === 'password'
                                                        ? '<i class=\'bi bi-eye-slash\'></i>'
                                                        : '<i class=\'bi bi-eye\'></i>';
                                                    pwdInput.type = pwdInput.type === 'password' ? 'text' : 'password';">
                                            <i class="bi bi-eye-slash"></i>
                                        </button>
                                    </div>
                                     <button type="button" class="btn btn-primary w-100" id="saveAccount">Sauvegarder</button>
                                 </form>
                             </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('moodle') }}">Tableau de bord</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('moodle') }}">Mes cours</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('moodle') }}">Sites UTBM</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('moodle') }}">Stages/S.E.E</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin') }}">Admin</a></li>
                    </ul>
                </div>
            </div>
        </nav>
 
         <script src="{{ asset('js/nav.js') }}" defer></script>
         
         <main>
             {% block body %}{% endblock %}
         </main>
 
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" async defer></script>
         <div class="page">
 
         <!-- FOOTER -->
         <footer>  
                 <p>&copy; 2025 - Mon site Moodle
                 <img rel="icon" src="{{ asset('assets/logo_moodle.png') }}" alt="Logo Moodle">
                 </p>
                 
         </footer>
 
         </div>
 
     </body>
 </html>