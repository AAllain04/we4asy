<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>Moodle - Connexion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="form-signin w-100 mx-auto" style="max-width: 400px;">
        <form method="post" action="{{ path('login') }}">
            <img alt="UTBM Logo" src="{{ asset('assets/logo.png') }}">
            <div class="clear"></div>
            <h1 class="h3 mb-3 fw-normal text-center">Bienvenue sur le site de l'UTBM</h1>
            <div class="clear"></div>

            {% if error %}
                <div class="alert alert-danger text-center">{{ error }}</div>
            {% endif %}

            <div class="form-floating position-relative">
                <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                <label for="floatingInput">Adresse e-mail</label>
            </div>

            <div class="form-floating position-relative mt-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Mot de passe" required minlength="5">
                <label for="floatingPassword">Mot de passe</label>

                <button type="button" class="btn btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2 border-0"
                        onclick="
                            const pwdInput = document.getElementById('floatingPassword');
                            this.innerHTML = pwdInput.type === 'password' ?
                                '<i class=\'bi bi-eye\'></i>' :
                                '<i class=\'bi bi-eye-slash\'></i>';
                            pwdInput.type = pwdInput.type === 'password' ? 'text' : 'password';">
                    <i class="bi bi-eye-slash"></i>
                </button>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">Se souvenir de moi</label>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Se connecter</button>
            <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2025</p>
        </form>
    </div>
</div>

<script src="{{ asset('js/index.js') }}" defer async></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" async defer></script>
</body>
</html>
